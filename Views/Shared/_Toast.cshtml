@* From Notyf Toast library *@
@{
    string state = "";
    string message = "";
    
    if (TempData.ContainsKey("State") && TempData.ContainsKey("Message"))
    {
        state = TempData["State"].ToString();
        message = TempData["Message"].ToString();
    }
}

@if (!string.IsNullOrEmpty(state) && !string.IsNullOrEmpty(message))
{
    <script>
        const notyf = new Notyf();
        const state = '@state';
        const message = '@message';

        if (state == "success") {
            notyf.success({
                message,
                dismissible: true,
                duration: 3000,
            });
        } else {
            notyf.error({
                message,
                dismissible: true,
                duration: 3000,
            });
        }
    </script>
}
