@{
    ViewData["Title"] = "Login";
}


@model taskify.Models.LoginViewModel


<section class="w-screen h-screen flex items-center justify-center">

<form action="/auth/login" method="OST" class="w-11/12 md:w-1/2 xl:w-1/4">

      <h1 class="text-3xl font-bold">Login </h1>
      <span>Login to your taskify account</span>
        <br/>
        <div class="my-4">
            <label for="email" class="block my-2">Email</label>
            <input class="input border-[1px] border-gray-200 focus:outline-none rounded-md w-full h-[3.7rem]" type="email" name="email" placeholder="Enter your email address"/>
        </div>

        <div class="my-4">
            <label for="password" class="block my-2">Password</label>
            <input class="input border-[1px] border-gray-200 focus:outline-none rounded-md w-full h-[3.7rem]" type="password" name="password" placeholder="Shhh ðŸ¤« it's a secret"/>
        </div>
        <div class="my-5">
            <button class="btn bg-[#181717] hover:bg-black text-white w-full h-[3.7rem]">Login</button>
        </div>


        <div>
            <span>Don't have an account?</span>
            <a class="underline" href="/auth/signup">Sign up</a>
        </div>
</form>

 
</section>



@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}